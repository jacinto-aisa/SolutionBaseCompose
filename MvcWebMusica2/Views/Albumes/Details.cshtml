@model MvcWebMusica2.Models.Albumes

@{
    ViewData["Title"] = "Detalles de Albumes";
}

<h1>Detalles</h1>

<div>
    <h4>Albumes</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Grupos)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Grupos!.Nombre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Generos)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Generos!.Nombre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Fecha)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Fecha)
        </dd>
        <dt class = "col-sm-2">
            Nº Canciones
        </dt>
        <dd class = "col-sm-10">
            @Model.Canciones.Count
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id"><i class="fa-solid fa-pen-to-square fs-3 mt-3" title="Editar"></i></a> |
    <a asp-action="Index"><i class="fa-solid fa-rotate-left fs-3 mt-3" title="Volver al listado"></i></a>
</div>
