@using MvcWebMusica2.Services.Specification
@model IEnumerable<MvcWebMusica2.Models.Artistas>

@{
    ViewData["Title"] = "Indice de Artistas";
}

<h1>Artistas</h1>
<a class="btn btn-outline-primary" asp-action="DescargarExcel">Descargar Excel</a>
<p>
    <a asp-action="Create"><i class="ps-3 fs-3 fa-solid fa-file-circle-plus" title="Crear nueva entrada"></i></a>
</p>
<table class="table table-bordered border-primary table-hover tabla-indice">
    <thead class="table-primary">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                    @await Component.InvokeAsync("ArtistasFunciones", new FuncionesSpecification(item.Id))
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id"><i class="fa-solid fa-pen-to-square" title="Editar"></i></a> |
                    <a asp-action="Details" asp-route-id="@item.Id"><i class="fa-solid fa-eye" title="Detalles"></i></a> |
                    <a asp-action="Delete" asp-route-id="@item.Id"><i class="fa-solid fa-trash" title="Borrar"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>