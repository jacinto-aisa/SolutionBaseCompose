@model MvcWebMusica2.Models.Canciones

@{
    ViewData["Title"] = "Detalles de Canciones";
}

<h1>Detalles</h1>

<div>
    <h4>Canciones</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Titulo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Titulo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Duracion)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Duracion, "{0:HH:mm:ss}")
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Albumes)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Albumes!.Nombre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Single)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Single)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id"><i class="fa-solid fa-pen-to-square fs-3 mt-3" title="Editar"></i></a> |
    <a asp-action="Index"><i class="fa-solid fa-rotate-left fs-3 mt-3" title="Volver al listado"></i></a>
</div>
