@model MvcWebMusica2.Models.FuncionesArtistas

@{
    ViewData["Title"] = "Añadir Funciones/Artistas";
}

<h1>Añadir</h1>

<h4>Funciones / Artistas</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ArtistasId" class="control-label"></label>
                <select asp-for="ArtistasId" class ="form-control" asp-items="ViewBag.ArtistasId"></select>
            </div>
            <div class="form-group">
                <label asp-for="FuncionesId" class="control-label"></label>
                <select asp-for="FuncionesId" class ="form-control" asp-items="ViewBag.FuncionesId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Añadir" class="btn btn-primary mt-3" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index"><i class="fa-solid fa-rotate-left fs-3 mt-3" title="Volver al listado"></i></a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
