@model MvcWebMusica2.Models.FuncionesArtistas

@{
    ViewData["Title"] = "Borrar Funciones/Artistas";
}

<h1>Borrar</h1>

<h3>¿Está segurro de borrar esta función/artista?</h3>
<div>
    <h4>Funciones / Artistas</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Artistas)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Artistas!.Nombre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Funciones)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Funciones!.Nombre)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Borrar" class="btn btn-danger mt-3" /> |
        <a asp-action="Index"><i class="fa-solid fa-rotate-left fs-3 mt-3" title="Volver al listado"></i></a>
    </form>
</div>
