@model MvcWebMusica2.Models.Grupos

@{
    ViewData["Title"] = "Borrar Grupos Musicales";
}

<h1>Borrar</h1>

<h3>¿Está segurro de borrar este grupo musical?</h3>
<div>
    <h4>Grupos Musicales</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.grupo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.grupo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Generos)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Generos!.Nombre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FechaCreacion)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FechaCreacion)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Ciudades)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Ciudades!.Nombre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Representantes)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Representantes!.NombreCompleto)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Borrar" class="btn btn-danger mt-3" /> |
        <a asp-action="Index"><i class="fa-solid fa-rotate-left fs-3 mt-3" title="Volver al listado"></i></a>
    </form>
</div>
