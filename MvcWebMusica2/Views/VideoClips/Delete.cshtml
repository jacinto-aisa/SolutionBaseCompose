@model MvcWebMusica2.Models.VideoClips

@{
    ViewData["Title"] = "Borrar VideoClips";
}

<h1>Borrar</h1>

<h3>¿Está segurro de borrar este videoclip?</h3>
<div>
    <h4>VideoClips</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Canciones)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Canciones!.Titulo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Fecha)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Fecha)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Borrar" class="btn btn-danger mt-3" /> |
        <a asp-action="Index"><i class="fa-solid fa-rotate-left fs-3 mt-3" title="Volver al listado"></i></a>
    </form>
</div>
